//- Metas y t√≠tulo
meta(charset='utf-8')
meta(http-equiv='x-ua-compatible' content='ie=edge')
title=title
meta(name='description' content=desc)
meta(name='keywords' content=keywords)
meta(name='author' content=author)
meta(name='viewport' content='width=device-width, initial-scale=1')

//- Place favicon.ico in the root directory
if appleFavicon
	link(rel='apple-touch-icon' href=appleFavicon)
if favicon
	link(rel='shortcut icon' href=favicon)

//- Twitter Cards data
if tc_card
	meta(name="twitter:card" content=tc_card)
if tc_site
	meta(name="twitter:site" content=tc_site)
if tc_title
	meta(name="twitter:title" content=tc_title)
if tc_description
	meta(name="twitter:description" content=tc_description)
if tc_image
	meta(name="twitter:creator" content=tc_image)

//- Open Graph data
if og_title
	meta(property="og:title" content=og_title)
if og_type
	meta(property="og:type" content=og_type)
if og_url
	meta(property="og:url" content=og_url)
if og_image
	meta(property="og:image" content=og_image)
if og_description
	meta(property="og:description" content=og_description)
if og_site_name
	meta(property="og:site_name" content=og_site_name)
if fb_admins
	meta(property="fb:admins" content=fb_admins)

//- CSS
if pathCSS
	link(rel='stylesheet' href=pathCSS + '?v=#{version}')